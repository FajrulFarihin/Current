<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Current" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light theme customizations -->
        <item name="colorPrimary">@color/grey_primary</item> <!-- Toolbar & buttons -->
        <item name="colorPrimaryContainer">@color/grey_primary_variant</item> <!-- Background container -->
        <item name="colorSecondary">@color/grey_secondary</item> <!-- Accent colors -->
        <item name="android:statusBarColor">@color/grey_status_bar</item> <!-- Status bar -->
        <item name="android:windowBackground">@color/white</item> <!-- White background -->
        <item name="materialButtonStyle">@style/CustomButtonStyle</item> <!-- Button customization -->
    </style>

    <!-- Custom button style -->
    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/grey_primary</item> <!-- Button background -->
        <item name="android:textColor">@color/white</item> <!-- Button text color -->
    </style>

    <!-- Inherit from the base theme -->
    <style name="Theme.Current" parent="Base.Theme.Current" />
</resources>
