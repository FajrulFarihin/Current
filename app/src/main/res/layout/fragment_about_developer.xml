<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back Button -->

    <TextView
        android:id="@+id/developerDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="This app is developed to calculate electricity bills efficiently."
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_gravity="center"
        android:layout_width="252dp"
        android:layout_height="241dp"
        android:contentDescription="TODO"
        android:src="@drawable/jud" />

    <TextView
        android:id="@+id/developerName"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/fajrul_farihin_mohd_bokhori"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/studId"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/_2023169033"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cdcs2404b" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/ict602" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autoLink="web"
        android:linksClickable="true"
        android:padding="10dp"
        android:text="@string/visit_https_github_com_fajrulfarihin_current"
        android:textColor="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/backToMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_to_main_screen" />

    <TextView
        android:id="@+id/copyrightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_2024_current_all_rights_reserved"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:padding="10dp" />


</LinearLayout>
